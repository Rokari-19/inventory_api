{
    "build": {
      "env": {
        "DJANGO_SETTINGS_MODULE": "inventory_api.settings.production"
      },
      "cmd": "pip install -r requirements.txt && python manage.py collectstatic --noinput"
    },
    "routes": [
      { "src": "/static/(.*)", "dest": "/static/$1" },
      { "src": "/(.*)", "dest": "manage.py" }
    ]
  }
  